<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/dropdown_arrow"
        android:layout_width="@dimen/icon_size_dropdown"
        android:layout_height="@dimen/icon_size_dropdown"
        android:layout_gravity="center"
        android:contentDescription="@string/dropdown_arrow_image_description" />

    <TextView
        android:id="@+id/start_date"
        style="@style/list_adapter" />

    <TextView
        android:id="@+id/end_date"
        style="@style/list_adapter" />

    <TextView
        android:id="@+id/from_city"
        style="@style/list_adapter" />

    <TextView
        android:id="@+id/to_city"
        style="@style/list_adapter" />

    <TextView
        android:id="@+id/description"
        style="@style/list_adapter"
        android:layout_weight="13" />


</LinearLayout>

